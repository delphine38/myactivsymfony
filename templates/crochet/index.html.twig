{% extends 'base.html.twig' %}

{% block title %}Hello CrochetController!{% endblock %}

{% block body %}
    <header>
        <img src="{{ asset('asset/logomyactivtransparent.png') }}" alt="logo"/>
        <h1 class="text-center mt-5 mb-5">Mes projets aux crochet 😉</h1>
    </header>


    <a class="nav-link active" href="{{ path('myactiv') }}">Accueil</a>


    <h2>Voici mes projets réaliser 😉</h2>


    <div class="container">
        <div class="row">
            {% for crochet in crochets %}
                <div class="col-4">
                    <div class="card" style="width: 25rem;">
                        <img src="{{ crochet.crochetimage }}"  alt="image crochet" width="40%">
                        <img src="{{ crochet.pelotteimage }}" alt="image pelotte" width="40%">
                        <div class="card-body">
                            <p class="card-text">Grâce à : <strong>{{ crochet.pelottenumber }} pelotte</strong> , du temps, et de l'envie</p>

                            <p class="card-title">Et avec le crochet n° : <strong>{{ crochet.numbercrochet }}</strong></p>
                            <p class="card-title">Vous réaliserez : votre super projet 👏 </p>
                            <img src="{{ crochet.imageprojetfini }}"  alt="image crochet" width="40%">

                            <a href="#" class="btn btn-primary">Un bouton ?</a>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>


{% endblock %}
